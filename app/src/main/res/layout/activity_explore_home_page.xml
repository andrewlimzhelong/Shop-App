<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hardwareAccelerated="true">

    <RelativeLayout
        android:id="@+id/layoutOfPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingTop="5dp"
                android:id="@+id/topBarWithSearch"
                android:background="@drawable/top_search_bar_background">

                <LinearLayout
                    android:id="@+id/SearchBarContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/HomeTitleText"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/search_box_background">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/searchET"
                                android:layout_width="250dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="3dp"
                                android:layout_toLeftOf="@+id/searchIcon"
                                android:background="@android:color/transparent"
                                android:cursorVisible="false"
                                android:hint="Search For A Brand..."
                                android:maxLines="1"
                                android:textColorHint="#b30000"
                                android:paddingLeft="8dp"
                                android:paddingTop="0dp"
                                android:paddingRight="5dp"
                                android:textSize="13dp" />

                            <ImageView
                                android:id="@+id/searchIcon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="3dp" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/logoutBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/HomeTitleText"
                    android:layout_toRightOf="@+id/SearchBarContent"
                    android:background="@drawable/woflogout" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mainScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5"
            android:layout_below="@+id/topBar"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <LinearLayout
                    android:id="@+id/cateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F5F5F5">

                        <RelativeLayout
                            android:id="@+id/relLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:id="@+id/bottomLine"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="#f5f5f5" />

                            <RelativeLayout
                                android:id="@+id/layoutsecpart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="50dp"
                                android:background="#f5f5f5">

                            </RelativeLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#f5f5f5"
                            android:orientation="vertical"
                            android:layout_marginBottom="50dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingBottom="0dp">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/mRecyclerView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:nestedScrollingEnabled="false"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relLayout3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/postedServicesPage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_weight="2">

                <RelativeLayout
                    android:id="@+id/bottomBar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#f5f5f5"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <RelativeLayout
                            android:id="@+id/ExploreBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/bottom_bar_right_corner">

                            <ImageView
                                android:id="@+id/compassIcon"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/home" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/compassIcon"
                                android:layout_centerHorizontal="true"
                                android:text="Home"
                                android:textColor="#b30000"
                                android:textSize="10dp" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/PostsBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:background="#ffffff">

                            <ImageView
                                android:id="@+id/likesIcon"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/shoppingcart" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/likesIcon"
                                android:layout_centerHorizontal="true"
                                android:text="Items"
                                android:textColor="#b30000"
                                android:textSize="10dp" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/sellBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:background="#ffffff">

                            <ImageView
                                android:id="@+id/plusIcon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="1dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/plusIcon"
                                android:layout_centerHorizontal="true"
                                android:text="Post"
                                android:textColor="#b30000"
                                android:textSize="10dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ChatsBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:background="#ffffff">

                            <ImageView
                                android:id="@+id/chatsIcon"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/chat" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/chatsIcon"
                                android:layout_centerHorizontal="true"
                                android:text="Chats"
                                android:textColor="#b30000"
                                android:textSize="10dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ProfileBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/original_bottom_left_corner">

                            <ImageView
                                android:id="@+id/ProfileIcon"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/user" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ProfileIcon"
                                android:layout_centerHorizontal="true"
                                android:text="Profile"
                                android:textColor="#b30000"
                                android:textSize="10dp" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/cameraIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/relLayout3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp"
            android:background="@drawable/plus" />

    </RelativeLayout>

</RelativeLayout>