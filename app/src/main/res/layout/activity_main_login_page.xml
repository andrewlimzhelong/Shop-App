<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004c64"
    tools:context=".AccountLogin.MainLoginPage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/emailHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="15dp"
        android:layout_alignStart="@+id/emailTextBox"
        android:text="Email"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/emailTextBox"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:background="@drawable/edittext_background"
        android:layout_below="@+id/emailHeader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:id="@+id/passwordHeader"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/emailTextBox"
        android:layout_alignStart="@+id/passwordTextBox"/>

    <EditText
        android:id="@+id/passwordTextBox"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@+id/passwordHeader"
        android:layout_marginTop="5dp"
        android:textCursorDrawable="@null"
        android:background="@drawable/edittext_background"
        android:textSize="15dp"
        android:textColorHint="#9B9FA5"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_below="@+id/passwordTextBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/loginbtn_background"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/loginPageText"
        android:layout_width="wrap_content"
        android:layout_height="20.5dp"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:layout_below="@+id/login_btn"
        android:layout_marginTop="10dp"
        android:text="Sign Up"
        android:textColor="#ffffff" />

</RelativeLayout>