<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:background="@color/darkBlue">

    <ImageView
        android:id="@+id/regACImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/createACHeader"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/regACImage"
        android:hint="Create Your Account"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_alignStart="@+id/regEmail"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameTV"
        android:text="Email"
        android:layout_marginStart="15dp"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/regEmail"
        android:layout_below="@+id/createACHeader"/>

    <EditText
        android:id="@+id/regEmail"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@+id/usernameTV"
        android:textCursorDrawable="@null"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_background"
        android:textSize="15dp"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textAlignment="center"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordTV"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:layout_marginStart="15dp"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/regEmail"
        android:layout_below="@+id/regEmail"/>

    <EditText
        android:id="@+id/regPassword"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/passwordTV"
        android:textCursorDrawable="@null"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext_background"
        android:textSize="15dp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textAlignment="center"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reEnterPassword"
        android:layout_marginTop="10dp"
        android:text="Confirm Password"
        android:layout_marginStart="15dp"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/regEmail"
        android:layout_below="@+id/regPassword"/>

    <EditText
        android:id="@+id/regPassword2"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@+id/reEnterPassword"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:textCursorDrawable="@null"
        android:background="@drawable/edittext_background"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/createAccountBtn"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@+id/regPassword2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/loginbtn_background"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Create Account" />

    <TextView
        android:id="@+id/loginPageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="14dp"
        android:layout_below="@+id/createAccountBtn"
        android:text="Already Have An Account?"
        android:textColor="@color/white" />

</RelativeLayout>