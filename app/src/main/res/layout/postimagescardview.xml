<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:weightSum="2">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/postedServicesPage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="2"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:id="@+id/headerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp">

                <ImageView
                    android:id="@+id/ServiceImageUploaded"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutBase"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:background="@drawable/post_view_shadow">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/TitleOfItem"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:maxLines="1"
                        android:text="Title Of Image"
                        android:textColor="#ffffff"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/DescriptionOfPost"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/TitleOfItem"
                        android:maxLines="1"
                        android:text="Des Of Post"
                        android:textColor="#ffffff"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/dollarSign"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/DescriptionOfPost"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:text="$"
                        android:textColor="#ffffff"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/PricingDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/DescriptionOfPost"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@+id/dollarSign"
                        android:maxLength="9"
                        android:maxLines="1"
                        android:textColor="#ffffff"
                        android:textColorHint="@color/white"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/DescriptionOfPost"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@+id/PricingDisplay"
                        android:text="."
                        android:textColor="#ffffff"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/decimal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/DescriptionOfPost"
                        android:layout_toRightOf="@+id/dots"
                        android:hint="00"
                        android:maxLength="2"
                        android:maxLines="1"
                        android:textColor="#ffffff"
                        android:textColorHint="@color/white"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>

